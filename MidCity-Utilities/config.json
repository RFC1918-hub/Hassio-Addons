{
  "name": "MidCity Utilities Sensor",
  "version": "1.2.2",
  "slug": "midcity_utilities",
  "description": "Monitor your MidCity Utilities prepaid meters in Home Assistant",
  "url": "https://github.com/Hassio-Addons/MidCity-Utilities",
  "arch": ["aarch64", "amd64", "armhf", "armv7", "i386"],
  "startup": "application",
  "boot": "auto",
  "init": false,
  "host_network": true,
  "options": {
    "username": "",
    "password": "",
    "scan_interval": 300,
    "log_level": "info"
  },
  "schema": {
    "username": "str",
    "password": "password",
    "scan_interval": "int(60,3600)?",
    "log_level": "list(debug|info|warning|error)?"
  },
  "auth_api": true,
  "homeassistant_api": true,
  "hassio_api": true,
  "hassio_role": "homeassistant",
  "services": ["mqtt:need"],
  "map": ["config:rw"]
}
